{
    "name": "template-node-js-project",
    "version": "1.0.0",
    "description": "Template simple node.js application",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "npm-run-all --parallel lint:*",
