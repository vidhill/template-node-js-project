    "devDependencies": {
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-unicorn": "^33.0.1",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "jest-tobetype": "^1.2.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.1",
        "rimraf": "^3.0.2"
